<section>
  <div class="container mt-5">
    <div class="row justify-content-md-center">
      <div class="card shadow-sm p-3 mb-5 bg-body rounded  mb-3" style="max-width: 40rem; margin-left:20px;">
        <div >
          <h2>Edit Post</h2>
        </div>
        <div class="card-body">
          <form class="new-post-form">
            <div>
              <label for="form-control" class="form-label">Title:</label>
              <input name="post-title" type="text" class="form-control mb-1" value="{{post.title}}" />
              <label for="form-control" class="form-label">Content:</label>
              <input class="form-control mb-1" name="content" id="floatingTextarea" type="text" value="{{post.content}}"
                name="content">
            </div>
            <div class="mb-1">
             by you on {{format_date post.created_at}}
            </div>
            <button type="submit" class="edit-post-form btn btn-outline-success"><img src="/image/updated.png" alt=""></button>
            <button type="button" class="delete-post-btn btn btn-outline-danger"><img src="/image/file.png" alt=""></button>
          </form>
        </div>
      </div>
    </div>
  <div>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
